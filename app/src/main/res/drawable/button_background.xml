<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/black"
                android:endColor="@color/darker_gray" />
            <stroke
                android:width="2dp"
                android:color="@color/black" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <corners
                android:radius="24dp" />
            <padding
                android:top="4dp"
                android:left="4dp"
                android:bottom="4dp"
                android:right="4dp" />
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="oval">
            <gradient
                android:angle="45"
                android:startColor="@color/darker_gray"
                android:endColor="@color/black" />
            <stroke
                android:width="3dp"
                android:color="@color/darker_gray" />
            <size
                android:width="48dp"
                android:height="48dp" />
            <corners
                android:radius="24dp" />
            <padding
                android:top="3dp"
                android:left="3dp"
                android:bottom="3dp"
                android:right="3dp" />
        </shape>
    </item>
</selector>
