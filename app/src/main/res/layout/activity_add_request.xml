<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BlueGray"
    android:padding="16dp"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_background"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:scaleType="centerCrop"
            android:src="@drawable/jamal" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello, Jamal"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/subText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to Car Maintenance Garage App"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/chooseCarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Choose the car"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <Spinner
        android:id="@+id/carSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/chooseCarText"
        android:layout_marginTop="10dp"
        android:background="@drawable/spinner_background"
        android:popupBackground="#FFFFFF"
        android:textColor="#00796B"/>

    <TextView
        android:id="@+id/selectOperationsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/carSpinner"
        android:layout_marginTop="10dp"
        android:text="Select the operations you want to perform"
        android:textColor="@android:color/white"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectOperationsText"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:padding="8dp">

        <CheckBox
            android:id="@+id/checkboxOilChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oil Change"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkboxTireChange"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tire Change"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkboxBatteryCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Battery Check"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/checkboxEngineCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Engine Check"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/performOperationsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_background"
            android:padding="8dp"
            android:text="Submit"
            android:backgroundTint="#00796B"
            android:textColor="@android:color/white"
            android:textColorLink="@color/LightGray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="249dp"
        android:layout_height="77dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dp"
        android:background="@drawable/bottom_bar_background"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/homeButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:contentDescription="Home"
            android:scaleType="centerCrop"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/listButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/button_background"
            android:contentDescription="List"
            android:scaleType="centerCrop"
            android:src="@drawable/order" />

        <ImageButton
            android:id="@+id/favoritesButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/button_background"
            android:contentDescription="Favorites"
            android:scaleType="centerCrop"
            android:src="@drawable/add" />

        <ImageButton
            android:id="@+id/menuButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:background="@drawable/button_background"
            android:contentDescription="Menu"
            android:scaleType="centerCrop"
            android:src="@drawable/manage" />
    </LinearLayout>
</RelativeLayout>